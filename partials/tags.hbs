{{#foreach posts limit="10"}}
<article class="{{post_class}}">
    <div class="adjuster">
        {{#if image}}
            <div class="background" style="background-image: url({{image}});"></div>
        {{/if}}
        <section>

                {{#has tag="text"}}
                    <h1>TEXT</h1>
                    <div class="content-container">
                        <p class="tags">{{tags separator=" #" prefix="#"}}</p>
                        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                        <p class="intro">{{excerpt words="30"}}...</p>
                        <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
                    </div>
                {{else}}
                    {{#has tag="video"}}
                        <h1>VIDEO</h1>
                    {{else}}
                        {{#has tag="photo"}}
                            <h1>PHOTO</h1>
                        {{else}}
                            {{#has tag="sound"}}
                                <h1>SOUND</h1>
                            {{else}}
                                {{#has tag="drawn"}}
                                    <h1>DRAWN</h1>
                                {{else}}

                                {{/has}}
                            {{/has}}
                        {{/has}}
                    {{/has}}
                    <div class="content-container">
                        <p class="tags">{{tags separator=" #" prefix="#"}}</p>
                        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                        <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
                    </div>
                {{/has}}


        </section>
    </div>
</article>
{{/foreach}}
